<UserControl x:Class="MHW_Randomizer.Misc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MHW_Randomizer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <TextBlock Text="Misc"
                   Margin="15 -4 0 0"
                   Background="White"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Panel.ZIndex="1"
                   FontWeight="Bold"
                   Height="16"/>
        <Border BorderBrush="Gray"
                BorderThickness="1"
                Margin="5"
                Height="100"
                VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal"
                        Margin="0 5">
                <StackPanel>
                    <CheckBox Content="Random Scoutfly Colour"
                            IsChecked="{Binding RandomScoutflyColour, Source={x:Static local:IoC.Settings}}"
                            Margin="5 4"
                            ToolTip="Randomizes the scoutfly colour for when tracking a monster, and the monster trace colours &#x0a;(Different colours for normal monster, elder dragon, and tempered)"
                            ToolTipService.ShowDuration="10000"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
